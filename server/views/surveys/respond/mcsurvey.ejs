<% include ../../partials/header.ejs %>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/survey">Survey</a></li>
      <li class="breadcrumb-item">Survey Title: <%=mcquestion.title%></li>
    </ol>
    <div style="background:transparent !important" class="jumbotron col-md-offset-2 col-md-8">
      <h3>&nbsp;&nbsp;&nbsp; <i class="fa fa-archive"></i> Answer Survey</h3>
    </div>
    <div class="container">
      <div class="row">
        <form class="form" method="post">
          <% for (let i = 0; i < mcquestions.length; i++) { %>
          <div class="jumbotron col-md-12" id="mcjumbotron">
            <span class="col-md-12" id="questionTitle"><h3>Question: "<%= mcquestions[i].question %>"</h3></span>
              <% for(a = 0; a < 4; a++) { %>
                 <span class="col-md-3" id="mcchoice">
                    <h3><%= mcquestions[i].options[a].option %><input type="radio" name="<%= mcquestions[i]._id %>" value="<%= mcquestions[i].options[a]._id %>"></h3>
                </span>
              <% } %>
          </div>
          <%}%>
          <button type="submit" class="btn btn-success"><i class="fa fa-check-square-o"></i> Submit</button>
          <a href="/survey" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
        </form> <!-- .form -->
      </div> <!-- body .container.row.col-msd-offset-3 col-md-6 -->
    </div> <!-- body .container -->
<% include ../../partials/footer.ejs %>