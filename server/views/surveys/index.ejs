<% include ../partials/header.ejs %>
    <div style="background:transparent !important" class="jumbotron col-md-offset-2 col-md-8">
      <h3>&nbsp;&nbsp;&nbsp; <i class="fa fa-archive"></i> Public Surveys</h3>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="jumbotron" id="surveyJumbotron">          
            <h4><span style="color:#000000;">Question types<br>
            </span></h4>            
            <button class="btn-default" data-toggle="collapse" data-target="#multipleList">Multiple Choice &nbsp;
            <span class="badge" id="surveyBadge">
            12
            </span></button>
            <button class="btn-default" data-toggle="collapse" data-target="#tfList">True and False
            <span class="badge" id="surveyBadge">
            <%= tfquestions.length %>
            </span></button><br><br>
            <ul id="multipleList" class="list-group collapse">
              <li class="list-group-item">add <span class="badge">5</span></li>
              <li class="list-group-item">Deleted <span class="badge">5</span></li> 
              <li class="list-group-item">Warnings <span class="badge">3</span></li> 
            </ul>
            <ul id="tfList" class="list-group collapse">
              <% for (let i = 0; i < tfquestions.length; i++){ %>
              <li class="list-group-item justify-content-between">
                <a href="survey/<%= tfquestions[i]._id %>" class="btn btn-success" role="button" id="btnAnswerSurvey">Answer</a><span id="listTitle"><%=tfquestions[i].title%></span><span class="badge" id="listBadge">Total questions: <%=tfquestions[i].questions.length %>&nbsp <%=(tfquestions[i].expire).toDateString()%></span>
                </li>
              <%}%>
            </ul>
          </div>
          <a href="survey/createNew" class="btn btn-success" role="button" id="btnPostSurvey">
          <i class="fa fa-pencil-square-o"></i>Create a new public survey</a>
        </div> <!-- body .container.row.col-md-offset-3 col-md-6 -->
      </div>
    </div> <!-- body .container -->
<% include ../partials/footer.ejs %>