<% include ../partials/header.ejs %>
    <div style="background:transparent !important" class="jumbotron col-md-offset-5 col-md-2 text-center">
      <h2>LOGIN</h2>
    </div>
    <div class="container">
      <% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
      <% } %>
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <div class="jumbotron" id="userJumbotron">
            <form method="post">
              <fieldset class="form-group">
                <label>Username:</label>
                <input type="text" class="form-control" name="username" required autofocus/>
              </fieldset>
              <fieldset class="form-group">
              <label>Password:</label>
                <input type="password" class="form-control" name="password" required/><br>
                or <a href="/register">Register</a>
              </fieldset>
              <fieldset class="form-group text-right">
                <a href="/"><input type="reset" class="btn btn-warning" value="Clear"/></a>
              <input type="submit" class="btn btn-success" value="Log In"/>                    
              </fieldset>
            </form>
          </div> <!-- .jumbotron -->
        </div> <!-- body .container.row.col-md-offset-3 col-md-6 -->
      </div>
    </div> <!-- body .container -->
<% include ../partials/footer.ejs %>